extends ../shared/template

block content
  h1 Projects

  #projects
    each project in projects
      .project
        h1: a(href='/project/show/#{project._id}')= project.title
        h2 #{project.photos.length} Photos
          img(src='#{project.photos}')
        h2= project.description
        h2= project.date
        h2= project.tags
        ul
          li: a(href=project.gitURL) Github
          li: a(href=project.appURL) View App
        if(user)
          form(method='POST', action='/project/#{project._id}')
            input(type='hidden', name='_method', value='DELETE' )
            button X
